<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/search_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/search_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/search_appbar">

        <TextView
            android:id="@+id/search_rlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Recent" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/search_recents"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eg_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect_btn"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Powell LT | G.42"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white" />

                <Button
                    android:id="@+id/eg_recent4"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect_btn"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Mott LT | G.11"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/search_qlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="Quick Access" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/search_quick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eg_recent5"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rect_btn"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Main Entrance"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search_extra" />

</android.support.constraint.ConstraintLayout>

